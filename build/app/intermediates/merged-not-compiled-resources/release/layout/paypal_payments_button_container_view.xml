<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/paymentButtonContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.paypal.checkout.paymentbutton.PayPalButton
        android:id="@+id/payPalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="PayPal"
        app:payment_button_shape="rectangle"
        app:payment_button_size="medium"
        app:paypal_color="gold"
        app:paypal_label="paypal" />

    <com.paypal.checkout.paymentbutton.PayPalCreditButton
        android:id="@+id/payPalCreditButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="PayPal Credit"
        app:payment_button_shape="rectangle"
        app:payment_button_size="medium"
        app:paypal_credit_color="dark_blue" />

    <com.paypal.checkout.paymentbutton.PayLaterButton
        android:id="@+id/payLaterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="Pay Later"
        app:payment_button_shape="rectangle"
        app:payment_button_size="medium"
        app:paypal_color="gold" />

</LinearLayout>
