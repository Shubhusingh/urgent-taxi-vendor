<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.paypal.pyplcheckout.ui.feature.home.customviews.SnappingRecyclerView
        android:id="@+id/picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:paddingTop="@dimen/paypal_checkout_padding_16x"
        app:layout_constraintBottom_toBottomOf="@id/dummy_anchor_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="2"
        tools:listitem="@layout/payments_source_card_view" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dummy_anchor_view"
        style="@style/PYPLTextViewCaption1Style"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/conversion_options_carousel_text"
        app:layout_constraintTop_toBottomOf="@+id/picker" />

    <TextView
        android:id="@+id/buf_text"
        style="@style/PYPLTextViewCaption1Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paypal_checkout_margin_8x"
        android:gravity="center"
        android:minLines="2"
        android:paddingStart="@dimen/paypal_checkout_margin_16x"
        android:paddingLeft="@dimen/paypal_checkout_margin_16x"
        android:paddingEnd="@dimen/paypal_checkout_margin_16x"
        android:paddingRight="@dimen/paypal_checkout_margin_16x"
        android:textColor="@color/paypal_checkout_gray_color_600"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/conversion_options_carousel_text"
        app:layout_constraintTop_toBottomOf="@+id/picker"
        tools:text="If your PayPal balance doesn't cover the total purchase amount, we'll charge the rest to Visa **** 4794"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/credit_offer_description_text"
        style="@style/PYPLTextViewBody1Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paypal_checkout_margin_32x"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="8dp"
        android:paddingStart="@dimen/paypal_checkout_margin_16x"
        android:paddingLeft="@dimen/paypal_checkout_margin_16x"
        android:paddingEnd="@dimen/paypal_checkout_margin_16x"
        android:paddingRight="@dimen/paypal_checkout_margin_16x"
        android:paddingBottom="@dimen/paypal_checkout_margin_32x"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/picker"
        tools:text="4 payments of $8.78 due every 2 weeks, starting today"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/conversion_options_carousel_text"
        style="@style/PYPLTextViewCaption1Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paypal_checkout_margin_4x"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/paypal_checkout_margin_16x"
        android:paddingLeft="@dimen/paypal_checkout_margin_16x"
        android:paddingEnd="@dimen/paypal_checkout_margin_16x"
        android:paddingRight="@dimen/paypal_checkout_margin_16x"
        android:textColor="@color/paypal_checkout_gray_color_600"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/bottom_padding"
        app:layout_constraintTop_toBottomOf="@id/buf_text"
        tools:text="You'll pay in GBP using the card issuer's conversion rate"
        tools:visibility="visible" />

    <View
        android:id="@+id/bottom_padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/paypal_checkout_snapping_view_padding_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conversion_options_carousel_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
