<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paypal_checkout_background_scrim_color" />

    <ScrollView
        android:id="@+id/bottomScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.paypal.pyplcheckout.ui.feature.home.customviews.AutoCloseBottomSheetBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/paypal_checkout_rounded_dialog">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/backArrowImageView"
                android:layout_width="@dimen/paypal_checkout_back_button_size"
                android:layout_height="@dimen/paypal_checkout_back_button_size"
                android:layout_margin="@dimen/paypal_checkout_margin_16x"
                android:background="@null"
                android:contentDescription="@string/paypal_checkout_go_back_btn"
                android:padding="8dp"
                android:src="@drawable/paypal_checkout_ic_arrow_back_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/closeImageView"
                android:layout_width="@dimen/paypal_checkout_pypl_close_button_size"
                android:layout_height="@dimen/paypal_checkout_pypl_close_button_size"
                android:layout_margin="@dimen/paypal_checkout_margin_16x"
                android:background="@null"
                android:contentDescription="@string/paypal_checkout_close"
                android:padding="@dimen/paypal_checkout_margin_10x"
                android:scaleType="centerInside"
                android:src="@drawable/paypal_checkout_ic_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/loadingHeaderView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/paypal_checkout_rounded_dialog_loading"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/backArrowImageView"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <FrameLayout
                android:id="@+id/contentFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/backArrowImageView"
                tools:layout_height="300dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>