<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payPalRateProtectionInfoViewContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="com.paypal.pyplcheckout.customviews.AutoCloseBottomSheetBehavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/paypal_checkout_margin_24x"
        app:layout_constraintBottom_toTopOf="@id/button_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/why_72"
                style="@style/PYPLTextViewBody2Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paypal_checkout_padding_16x"
                android:text="@string/paypal_checkout_why_72"
                app:layout_constraintBottom_toTopOf="@id/rate_protection_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rate_protection_content"
                style="@style/PYPLTextViewCaption1Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/paypal_checkout_padding_8x"
                android:paddingStart="@dimen/paypal_checkout_padding_16x"
                android:paddingLeft="@dimen/paypal_checkout_padding_16x"
                android:paddingEnd="@dimen/paypal_checkout_padding_16x"
                android:paddingRight="@dimen/paypal_checkout_padding_16x" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/button_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/paypal_checkout_white_color"
        android:paddingStart="@dimen/paypal_checkout_padding_48x"
        android:paddingLeft="@dimen/paypal_checkout_padding_48x"
        android:paddingEnd="@dimen/paypal_checkout_padding_48x"
        android:paddingRight="@dimen/paypal_checkout_padding_48x"
        android:paddingBottom="@dimen/paypal_checkout_padding_16x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.paypal.pyplcheckout.ui.feature.home.customviews.PayPalActionButton
            android:id="@+id/okButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/paypal_checkout_margin_5x"
            android:background="@null"
            android:text="@string/paypal_checkout_got_it"
            android:textColor="@color/paypal_checkout_white_color" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
