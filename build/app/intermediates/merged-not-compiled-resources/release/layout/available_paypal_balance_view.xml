<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/pplogo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paypal_checkout_margin_8x"
        android:layout_marginBottom="@dimen/paypal_checkout_margin_16x"
        android:src="@drawable/paypal_checkout_ic_pplogo3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/padding_view"
        app:layout_constraintStart_toStartOf="@id/padding_view"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/error_state_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paypal_checkout_margin_32x"
        android:layout_marginLeft="@dimen/paypal_checkout_margin_32x"
        android:layout_marginEnd="@dimen/paypal_checkout_margin_16x"
        android:layout_marginRight="@dimen/paypal_checkout_margin_16x"
        android:elevation="@dimen/paypal_checkout_balance_error_elevation"
        android:src="@drawable/paypal_checkout_ic_attention"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/pplogo2"
        app:layout_constraintEnd_toEndOf="@id/padding_view"
        app:layout_constraintRight_toRightOf="@id/padding_view"
        app:layout_constraintTop_toTopOf="@id/pplogo2" />

    <TextView
        android:id="@+id/expanded_error_tv"
        style="@style/PYPLTextViewCaption1Style"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="@dimen/paypal_checkout_padding_16x"
        tools:text="@string/paypal_checkout_dummy_error_msg_dont_translate"
        android:textAlignment="gravity"
        android:background="@drawable/paypal_checkout_warning_shape_bg"
        android:drawableStart="@drawable/paypal_checkout_ic_attention"
        android:drawableLeft="@drawable/paypal_checkout_ic_attention"
        android:drawableEnd="@drawable/paypal_checkout_ic_close"
        android:drawableRight="@drawable/paypal_checkout_ic_close"
        android:drawablePadding="@dimen/paypal_checkout_padding_4x"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pplogo2"
        android:layout_marginTop="@dimen/paypal_checkout_margin_4x"
        android:elevation="@dimen/paypal_checkout_divider_height"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/pplogo2"
        app:layout_constraintEnd_toStartOf="@id/error_state_img"
        app:layout_constraintRight_toLeftOf="@id/error_state_img"
        app:layout_constraintTop_toTopOf="@id/pplogo2" />

    <!-- reset invisible -->
    <TextView
        android:id="@+id/balance_amount_tv"
        style="@style/PYPLTextViewBody2Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/paypal_checkout_padding_16x"
        android:layout_marginTop="@dimen/paypal_checkout_padding_16x"
        app:layout_constraintBottom_toBottomOf="@id/pplogo2"
        app:layout_constraintLeft_toRightOf="@id/horizontal_guide"
        app:layout_constraintStart_toEndOf="@id/horizontal_guide"
        app:layout_constraintTop_toTopOf="@id/pplogo2" />

    <View
        android:id="@+id/padding_view"
        android:layout_width="@dimen/paypal_checkout_match_constraint"
        android:layout_height="@dimen/paypal_checkout_match_constraint"
        android:layout_marginStart="@dimen/paypal_checkout_margin_16x"
        android:layout_marginLeft="@dimen/paypal_checkout_margin_16x"
        android:layout_marginEnd="@dimen/paypal_checkout_margin_16x"
        android:layout_marginRight="@dimen/paypal_checkout_margin_16x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/paypal_checkout_home_item_guide" />

    <com.paypal.pyplcheckout.ui.feature.home.customviews.ToggleSwitchView
        android:id="@+id/custom_balance_toggle_switch_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paypal_checkout_margin_8x"
        app:layout_constraintBottom_toBottomOf="@id/pplogo2"
        app:layout_constraintEnd_toEndOf="@id/padding_view"
        app:layout_constraintRight_toRightOf="@id/padding_view"
        app:layout_constraintTop_toTopOf="@id/pplogo2" />
</merge>
