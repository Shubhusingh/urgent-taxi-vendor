<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/paypal_checkout_padding_16x"
    app:layout_behavior="com.paypal.pyplcheckout.customviews.AutoCloseBottomSheetBehavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crypto_terms_scroll_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/crypto_sell_title"
            style="@style/PYPLTextViewTitle1Style"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paypal_checkout_padding_8x"
            android:textAlignment="center"
            android:text="@string/paypal_checkout_see_crypto_to_pay_title" />

        <TextView
            android:id="@+id/crypto_sell_info_text_one"
            style="@style/PYPLTextViewBody2Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paypal_checkout_padding_24x"
            android:paddingBottom="@dimen/paypal_checkout_padding_24x"
            android:text="@string/paypal_checkout_we_sell_your_crypto_to_pay_details_text_one" />

        <TextView
            android:id="@+id/crypto_sell_info_text_two"
            style="@style/PYPLTextViewBody2Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/paypal_checkout_padding_24x"
            android:text="@string/paypal_checkout_we_sell_your_crypto_to_pay_details_text_two" />

        <TextView
            android:id="@+id/crypto_refunds_title"
            style="@style/PYPLTextViewTitle1Style"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paypal_checkout_padding_8x"
            android:textAlignment="center"
            android:text="@string/paypal_checkout_crypto_refunds_details_title" />

        <TextView
            android:id="@+id/crypto_refunds_info"
            style="@style/PYPLTextViewBody2Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paypal_checkout_padding_24x"
            android:paddingBottom="@dimen/paypal_checkout_padding_24x"
            android:text="@string/paypal_checkout_crypto_refunds_details_text" />

        <TextView
            android:id="@+id/crypto_sales_title"
            style="@style/PYPLTextViewTitle1Style"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paypal_checkout_padding_8x"
            android:textAlignment="center"
            android:text="@string/paypal_checkout_crypto_sales_details_title" />

        <TextView
            android:id="@+id/crypto_sales_info"
            style="@style/PYPLTextViewBody2Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paypal_checkout_padding_24x"
            android:paddingBottom="@dimen/paypal_checkout_padding_24x"
            android:text="@string/paypal_checkout_crypto_sales_details_text" />

    </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/button_space_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/paypal_checkout_padding_16x"
        android:background="@color/paypal_checkout_white_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crypto_terms_scroll_view">

        <com.paypal.pyplcheckout.ui.feature.home.customviews.PayPalActionButton
            android:id="@+id/crypto_consent_got_it_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/paypal_checkout_margin_48x"
            android:layout_marginEnd="@dimen/paypal_checkout_margin_48x"
            android:background="@null"
            android:text="@string/paypal_checkout_crypto_got_it_button" />

    </RelativeLayout>

    <TextView
        android:id="@+id/crypto_full_terms_and_conditions_link_tv"
        style="@style/PYPLTextViewCaption1Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingTop="@dimen/paypal_checkout_padding_16x"
        android:paddingBottom="@dimen/paypal_checkout_padding_24x"
        android:text="@string/paypal_checkout_crypto_terms_and_conditions"
        android:textAlignment="gravity"
        android:textColor="@color/paypal_checkout_primary_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_space_wrapper" />
</androidx.constraintlayout.widget.ConstraintLayout>