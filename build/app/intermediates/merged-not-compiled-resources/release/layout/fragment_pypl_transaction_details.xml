<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.feature.transactioninfo.fragment.PYPLTransactionDetailsFragment">

    <LinearLayout
        android:id="@+id/transactionDetailsBgdMaskLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paypal_checkout_transparent_color_alpha_70"
        android:orientation="vertical"
        android:visibility="gone">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/transactionDetailsBottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.paypal.pyplcheckout.ui.feature.home.customviews.AutoCloseBottomSheetBehavior">

        <include layout="@layout/transaction_details_bottom_sheet_layout" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
