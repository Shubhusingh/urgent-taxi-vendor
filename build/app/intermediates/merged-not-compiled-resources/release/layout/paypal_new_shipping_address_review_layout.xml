<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payPalNewShippingAddressInfoViewContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paypal_checkout_padding_16x"
            android:paddingLeft="@dimen/paypal_checkout_padding_16x"
            android:paddingRight="@dimen/paypal_checkout_padding_16x">

            <LinearLayout
                android:id="@+id/splitNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.paypal.pyplcheckout.ui.utils.view.PayPalEditText
                    android:id="@+id/nameEditText"
                    style="@style/Pypl.TextInputLayoutStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/paypal_checkout_name"
                    app:errorEnabled="true"
                    />

                <Space style="@style/PYPLHorizontalSpace"/>

                <com.paypal.pyplcheckout.ui.utils.view.PayPalEditText
                    android:id="@+id/lastnameEditText"
                    style="@style/Pypl.TextInputLayoutStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/paypal_checkout_last_name"
                    app:errorEnabled="true"
                    />

            </LinearLayout>

            <Space
                android:id="@+id/space1"
                style="@style/PYPLVerticalSpace"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/splitNameLayout"
                />

            <com.paypal.pyplcheckout.ui.utils.view.PayPalEditText
                android:id="@+id/addressReviewEditText"
                style="@style/Pypl.TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space1"
                app:roundedDrawable="true"
                />

            <Space
                android:id="@+id/space2"
                style="@style/PYPLVerticalSpace"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addressReviewEditText"
                />

            <com.paypal.pyplcheckout.ui.utils.view.PayPalEditText
                android:id="@+id/addressLine2EditText"
                style="@style/Pypl.TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space2"
                />

            <Space
                android:id="@+id/space3"
                style="@style/PYPLVerticalSpace"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addressLine2EditText"
                />

            <com.paypal.pyplcheckout.ui.utils.view.PayPalEditText
                android:id="@+id/cityEditText"
                style="@style/Pypl.TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space3"
                />

            <Space
                android:id="@+id/space4"
                style="@style/PYPLVerticalSpace"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cityEditText"
                />

            <LinearLayout
                android:id="@+id/stateZipcodeLayout"
                style="@style/Pypl.TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space4">

                <com.paypal.pyplcheckout.ui.utils.view.PayPalEditText
                    android:id="@+id/stateEditText"
                    style="@style/Pypl.TextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    android:layout_weight="1"
                    />

                <Space android:id="@+id/spaceBetweenStateAndZipcode"
                    style="@style/PYPLHorizontalSpace"/>

                <com.paypal.pyplcheckout.ui.utils.view.PayPalEditText
                    android:id="@+id/zipEditText"
                    style="@style/Pypl.TextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    android:layout_weight="1"
                    />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.paypal.pyplcheckout.ui.feature.home.customviews.PayPalActionButton
            android:id="@+id/saveNewAddressButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/paypal_checkout_new_address_save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/paypal_checkout_custom_progress"
            android:indeterminateTint="@color/paypal_checkout_white_color"
            app:layout_constraintStart_toStartOf="@+id/saveNewAddressButton"
            app:layout_constraintEnd_toEndOf="@+id/saveNewAddressButton"
            app:layout_constraintTop_toTopOf="@+id/saveNewAddressButton"
            app:layout_constraintBottom_toBottomOf="@+id/saveNewAddressButton"
            android:visibility="gone"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>