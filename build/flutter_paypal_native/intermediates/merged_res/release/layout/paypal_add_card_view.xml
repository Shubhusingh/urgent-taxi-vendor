<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_card_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/paypal_checkout_padding_16x"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_card_number"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/paypal_checkout_card_number"
        app:boxBackgroundMode="none"
        android:textColorHint="@color/paypal_checkout_add_card_gray"
        app:hintTextColor="@color/paypal_checkout_add_card_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/til_exp_date">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_card_number"
            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/paypal_checkout_cursor_blue"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_exp_date"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/paypal_checkout_paypal_credit_card_expiry_min_width"
        android:hint="@string/paypal_checkout_exp"
        android:textColorHint="@color/paypal_checkout_add_card_gray"
        app:boxBackgroundMode="none"
        app:hintTextColor="@color/paypal_checkout_add_card_blue"
        app:layout_constraintEnd_toStartOf="@id/til_csc"
        app:layout_constraintTop_toTopOf="@id/til_card_number">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_exp_date"
            android:layout_width="match_parent"
            android:saveEnabled="false"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="5"
            android:minEms="5"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/paypal_checkout_cursor_blue"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_csc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/paypal_checkout_paypal_csc_min_width"
        android:hint="@string/paypal_checkout_csc"
        android:textColorHint="@color/paypal_checkout_add_card_gray"
        app:boxBackgroundMode="none"
        app:hintTextColor="@color/paypal_checkout_add_card_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/til_card_number">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_csc"
            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="4"
            android:minEms="4"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/paypal_checkout_cursor_blue"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/divider_card_info"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/paypal_checkout_add_card_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_card_number" />

    <ImageView
        android:id="@+id/imageView_card_error"
        android:layout_width="@dimen/paypal_checkout_margin_12x"
        android:layout_height="@dimen/paypal_checkout_margin_12x"
        android:layout_marginTop="@dimen/paypal_checkout_margin_12x"
        android:alpha="0"
        android:scaleType="fitXY"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_card_info"
        app:srcCompat="@drawable/paypal_checkout_ic_add_card_error"
        tools:alpha="1" />

    <TextView
        android:id="@+id/textView_card_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:alpha="0"
        android:text="@string/paypal_checkout_card_number_error"
        android:textColor="@color/paypal_checkout_add_card_red_hint"
        android:textSize="13sp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/imageView_card_error"
        app:layout_constraintEnd_toEndOf="@+id/divider_card_info"
        app:layout_constraintStart_toEndOf="@id/imageView_card_error"
        app:layout_constraintTop_toTopOf="@id/imageView_card_error"
        tools:alpha="1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_zip_code"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/paypal_checkout_zip_code"
        android:textColorHint="@color/paypal_checkout_add_card_gray"
        app:boxBackgroundMode="none"
        app:hintTextColor="@color/paypal_checkout_add_card_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_card_info"
        app:layout_constraintWidth_percent=".4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_zip_code"
            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="textPostalAddress"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/paypal_checkout_cursor_blue"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/divider_zip_code"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/paypal_checkout_add_card_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_zip_code" />

    <ImageView
        android:id="@+id/imageView_zip_error"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:alpha="0"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_zip_code"
        app:srcCompat="@drawable/paypal_checkout_ic_add_card_error"
        tools:alpha="1"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView_zip_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:alpha="0"
        android:text="@string/paypal_checkout_zip_code_error"
        android:textColor="@color/paypal_checkout_add_card_red_hint"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/imageView_zip_error"
        app:layout_constraintStart_toEndOf="@id/imageView_zip_error"
        app:layout_constraintTop_toTopOf="@id/imageView_zip_error"
        tools:alpha="1"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
