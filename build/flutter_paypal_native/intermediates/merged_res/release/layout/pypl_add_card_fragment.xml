<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/paysheet_wrapper"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/paysheet_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_anchorGravity="bottom"
        app:layout_behavior="com.paypal.pyplcheckout.ui.feature.home.customviews.AutoCloseBottomSheetBehavior">


        <LinearLayout
            android:id="@+id/footer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/paypal_checkout_white_color"
            android:orientation="vertical"
            />

        <FrameLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer_container"
            android:clipToPadding="false"
            >

            <LinearLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:elevation="@dimen/paypal_checkout_user_profile_circle_layout_elevation"
                android:orientation="vertical" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/paypal_checkout_rounded_dialog"
                android:fillViewport="true"
                android:fadeScrollbars="true"
                android:fadingEdgeLength="@dimen/paypal_checkout_paysheet_fading_length"
                android:requiresFadingEdge="vertical"
                android:scrollbars="vertical">

                <LinearLayout
                    android:id="@+id/body_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/paypal_checkout_white_color"
                    android:paddingTop="@dimen/paypal_checkout_padding_48x"
                    android:orientation="vertical" />

            </androidx.core.widget.NestedScrollView>
        </FrameLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>