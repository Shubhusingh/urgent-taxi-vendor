<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- heart view state, red indicates that this is a "favorite" payment method" -->
    <ImageView
        android:id="@+id/preferred_fi_view_state"
        android:layout_width="@dimen/paypal_checkout_preferred_card_width"
        android:layout_height="@dimen/paypal_checkout_preferred_card_height"
        android:background="@drawable/paypal_checkout_ic_preferred_gray"
        android:contentDescription="@string/paypal_checkout_preferred_fi_instrument_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/preferred_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/preferred_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/preferred_text"
        style="@style/PYPLTextViewCaption1Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:paddingStart="@dimen/paypal_checkout_padding_8x"
        android:paddingLeft="@dimen/paypal_checkout_padding_8x"
        android:paddingEnd="@dimen/paypal_checkout_padding_8x"
        android:paddingRight="@dimen/paypal_checkout_padding_8x"
        android:paddingTop="@dimen/paypal_checkout_padding_4x"
        android:paddingBottom="@dimen/paypal_checkout_padding_4x"
        android:text="@string/paypal_checkout_preferred_interaction"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/preferred_fi_view_state"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/preferred_fi_view_state"
        app:layout_constraintTop_toBottomOf="@id/preferred_fi_view_state"
        app:layout_constraintTop_toTopOf="@id/preferred_fi_view_state" />

</merge>
