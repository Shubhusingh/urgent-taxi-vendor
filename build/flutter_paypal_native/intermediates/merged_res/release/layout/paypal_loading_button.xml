<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.paypal.pyplcheckout.ui.feature.home.customviews.PayPalActionButton
        android:id="@+id/paypal_loading_button"
        android:saveEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ProgressBar
        android:id="@+id/paypal_loading_button_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/paypal_checkout_custom_progress"
        android:indeterminateTint="@color/paypal_checkout_white_color"
        app:layout_constraintStart_toStartOf="@id/paypal_loading_button"
        app:layout_constraintEnd_toEndOf="@id/paypal_loading_button"
        app:layout_constraintTop_toTopOf="@id/paypal_loading_button"
        app:layout_constraintBottom_toBottomOf="@id/paypal_loading_button"
        android:visibility="gone"
        tools:visibility="visible" />


</merge>