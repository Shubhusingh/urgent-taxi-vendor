<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payPalAddressBookHeaderContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addressBookHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/paypal_checkout_rounded_dialog"
        android:backgroundTint="@color/paypal_checkout_white_color"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/addressBookBackArrowImageView"
            style="@style/PYPLBackButtonStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/addressBookTitleTextView"
            style="@style/PYPLTextViewTitle1Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/addressBookBackArrowImageView"
            app:layout_constraintEnd_toStartOf="@id/backButtonWidthOffsetSpace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/paypal_checkout_address_book" />

        <!-- This view provides the same offset as the width of the back button,
        centering the above TextView in the parent-->
        <Space
            android:id="@+id/backButtonWidthOffsetSpace"
            style="@style/PYPLHorizontalSpace.BackButtonOffset"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
