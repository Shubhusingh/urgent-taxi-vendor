<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/currency_conversion_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:visibility="visible">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/paypal_checkout_home_item_guide" />

    <View
        android:id="@+id/line_break"
        android:layout_width="@dimen/paypal_checkout_match_constraint"
        android:layout_height="@dimen/paypal_checkout_divider_height"
        android:background="@color/paypal_checkout_gray_color_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/paypal_checkout_match_constraint"
        android:layout_height="@dimen/paypal_checkout_divider_height"
        android:layout_marginStart="@dimen/paypal_checkout_margin_16x"
        android:layout_marginLeft="@dimen/paypal_checkout_margin_16x"
        android:layout_marginEnd="@dimen/paypal_checkout_margin_16x"
        android:layout_marginRight="@dimen/paypal_checkout_margin_16x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_break" />

    <ImageView
        android:id="@+id/conversion_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paypal_checkout_margin_16x"
        app:layout_constraintLeft_toLeftOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintTop_toBottomOf="@id/line_break"
        app:srcCompat="@drawable/paypal_checkout_ic_calculator" />

    <TextView
        android:id="@+id/pp_conversion_view_title"
        style="@style/PYPLTextViewBody2Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paypal_checkout_margin_16x"
        android:gravity="left|start"
        android:paddingBottom="@dimen/paypal_checkout_padding_8x"
        android:text="@string/paypal_checkout_paypal_conversion_rate"
        app:layout_constraintBottom_toTopOf="@id/pp_conversion_rate_tv"
        app:layout_constraintLeft_toRightOf="@id/horizontal_guide"
        app:layout_constraintRight_toLeftOf="@id/view"
        app:layout_constraintStart_toEndOf="@id/horizontal_guide"
        app:layout_constraintTop_toBottomOf="@id/line_break" />

    <TextView
        android:id="@+id/crypto_selling_amount_tv"
        style="@style/PYPLTextViewBody2Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paypal_checkout_margin_16x"
        android:paddingStart="@dimen/paypal_checkout_padding_4x"
        android:paddingBottom="@dimen/paypal_checkout_padding_8x"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/pp_conversion_rate_tv"
        app:layout_constraintLeft_toRightOf="@id/pp_conversion_view_title"
        app:layout_constraintStart_toEndOf="@id/pp_conversion_view_title" />

    <TextView
        android:id="@+id/pp_conversion_rate_tv"
        style="@style/PYPLTextViewBody1Style"
        android:layout_width="@dimen/paypal_checkout_match_constraint"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pp_conversion_view_title"
        android:gravity="start|left"
        android:paddingBottom="@dimen/paypal_checkout_padding_4x"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/conversion_spread_tv"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintLeft_toRightOf="@id/horizontal_guide"
        app:layout_constraintRight_toLeftOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/horizontal_guide"
        app:layout_constraintTop_toBottomOf="@id/pp_conversion_view_title"
        app:layout_goneMarginBottom="@dimen/paypal_checkout_margin_8x" />

    <com.paypal.pyplcheckout.ui.feature.home.customviews.LinkTextView
        android:id="@+id/conversion_spread_tv"
        style="@style/PYPLTextViewCaption1Style"
        android:layout_width="@dimen/paypal_checkout_match_constraint"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/paypal_checkout_padding_8x"
        android:text="@string/paypal_checkout_currency_conversion_spread"
        android:textColor="@color/paypal_checkout_gray_color_501"
        tools:text="This rate includes a currency conversion spread and refreshes until you sell your crypto. #lRates and fees#l"
        app:layout_constraintBottom_toTopOf="@id/btn_conversion_options"
        app:layout_constraintLeft_toRightOf="@id/horizontal_guide"
        app:layout_constraintRight_toLeftOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/horizontal_guide"
        app:layout_constraintTop_toBottomOf="@id/pp_conversion_rate_tv"
        app:layout_goneMarginBottom="@dimen/paypal_checkout_margin_8x" />

    <TextView
        android:id="@+id/btn_conversion_options"
        style="@style/PYPLTextViewCaption2Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/paypal_checkout_touch_target_min_height"
        android:layout_marginTop="@dimen/paypal_checkout_margin_8x"
        android:paddingBottom="@dimen/paypal_checkout_padding_16x"
        android:text="@string/paypal_checkout_see_conversion_options"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/wrapper_72hour"
        app:layout_constraintLeft_toRightOf="@id/horizontal_guide"
        app:layout_constraintStart_toStartOf="@id/horizontal_guide"
        app:layout_constraintTop_toBottomOf="@id/conversion_spread_tv" />

    <RelativeLayout
        android:id="@+id/wrapper_72hour"
        android:layout_width="@dimen/paypal_checkout_match_constraint"
        android:layout_height="wrap_content"
        android:background="@color/paypal_checkout_gray_color_200"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_conversion_options"
        tools:visibility="visible">

        <TextView
            android:id="@+id/label_72_hours"
            style="@style/PYPLTextViewCaption1Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/paypal_checkout_label_72_hour_margin_horizontal"
            android:layout_marginLeft="@dimen/paypal_checkout_label_72_hour_margin_horizontal"
            android:layout_marginTop="@dimen/paypal_checkout_margin_16x"
            android:layout_marginEnd="@dimen/paypal_checkout_margin_24x"
            android:layout_marginRight="@dimen/paypal_checkout_margin_24x"
            android:layout_marginBottom="@dimen/paypal_checkout_margin_16x"
            android:layout_toStartOf="@id/btn_72hour_see_more"
            android:drawableStart="@drawable/paypal_checkout_ic_lock_72_hour"
            android:drawableLeft="@drawable/paypal_checkout_ic_lock_72_hour"
            android:drawablePadding="@dimen/paypal_checkout_padding_8x"
            android:gravity="center_vertical"
            android:text="@string/paypal_checkout_this_rate_could_change_72"
            android:textAlignment="gravity" />

        <TextView
            android:id="@+id/btn_72hour_see_more"
            style="@style/PYPLTextViewCaption2Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/paypal_checkout_margin_24x"
            android:layout_marginRight="@dimen/paypal_checkout_margin_24x"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="@dimen/paypal_checkout_padding_4x"
            android:text="@string/paypal_checkout_learn_more"
            android:textAlignment="viewEnd"
            android:textColor="@color/paypal_checkout_primary_blue" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
