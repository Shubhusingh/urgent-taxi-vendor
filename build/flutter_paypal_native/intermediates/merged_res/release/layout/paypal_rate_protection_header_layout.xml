<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payPalRateProtectionHeaderContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/paypal_checkout_rounded_dialog"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/rateProtectionBackArrowImageView"
        style="@style/PYPLBackButtonStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rateProtectionTitleTextView"
        style="@style/PYPLTextViewTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paypal_checkout_rate_prot_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/backButtonWidthOffsetSpace"
        app:layout_constraintStart_toEndOf="@+id/rateProtectionBackArrowImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- This view provides the same offset as the width of the back button,
        centering the above TextView in the parent-->
    <Space
        android:id="@+id/backButtonWidthOffsetSpace"
        style="@style/PYPLHorizontalSpace.BackButtonOffset"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
