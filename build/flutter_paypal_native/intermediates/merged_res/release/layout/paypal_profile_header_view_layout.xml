<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payPalProfileHeaderContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/userProfileCircleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:elevation="@dimen/paypal_checkout_user_profile_circle_layout_elevation"
        app:layout_anchor="@+id/nested_scroll_view"
        app:layout_anchorGravity="top|center">

        <TextView
            android:id="@+id/userProfileInitialCircleTextView"
            style="@style/PYPLTextViewTitle1Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/paypal_checkout_margin_8x"
            android:layout_marginEnd="@dimen/paypal_checkout_margin_8x"
            android:background="@drawable/paypal_checkout_rounded_view"
            android:gravity="center"
            android:textColor="@color/paypal_checkout_white_color"
            android:visibility="gone" />

        <com.paypal.pyplcheckout.ui.feature.home.customviews.CircleImageView
            android:id="@+id/userProfileCircleImageView"
            android:layout_width="@dimen/paypal_checkout_circle_icon_width"
            android:layout_height="@dimen/paypal_checkout_circle_icon_height"
            android:layout_gravity="center_horizontal" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/paypal_checkout_header_margin_top"
        android:background="@drawable/paypal_checkout_rounded_dialog">

        <ImageView
            android:id="@+id/userProfileBackArrowImageView"
            style="@style/PYPLBackButtonStyle" />

    </FrameLayout>

</FrameLayout>
