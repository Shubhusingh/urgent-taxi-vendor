<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/paypal_checkout_padding_16x"
    android:paddingEnd="@dimen/paypal_checkout_padding_16x"
    android:saveEnabled="false"
    >

    <com.paypal.pyplcheckout.ui.utils.view.PayPalEditText
        android:id="@+id/country_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/paypal_checkout_select_country"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/country_picker_recycler_view"
       />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/country_picker_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toBottomOf="@+id/country_search_view"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/search_list_country_view">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>
