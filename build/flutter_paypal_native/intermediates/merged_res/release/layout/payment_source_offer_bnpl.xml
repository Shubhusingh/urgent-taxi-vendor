<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="@dimen/paypal_checkout_payment_source_wrapper_width"
    android:layout_height="wrap_content"
    android:alpha="@dimen/paypal_checkout_dismissed_fi_alpha_value"
    android:clickable="false">

    <ImageView
        android:id="@+id/payment_source_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/paypal_checkout_paypal_payment_source_card_margin"
        android:background="@drawable/paypal_checkout_ic_payment_card_gray_bgd"
        android:elevation="@dimen/paypal_checkout_card_elevation"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="H,19:12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.28" />

</androidx.constraintlayout.widget.ConstraintLayout>