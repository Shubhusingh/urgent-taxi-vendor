<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/bottom_sheet_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/homeBgdMaskLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/paypal_checkout_background_scrim_color"
            android:orientation="vertical" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:importantForAccessibility="no"
        android:focusable="true"
        app:layout_anchorGravity="top">

        <com.paypal.pyplcheckout.ui.feature.home.customviews.alertview.PayPalAlertToastView
            android:id="@+id/toast_alert_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/paypal_checkout_margin_16x"
            android:layout_marginTop="@dimen/paypal_checkout_margin_16x"
            android:layout_marginEnd="@dimen/paypal_checkout_margin_16x"
            android:alpha="0"
            android:elevation="@dimen/paypal_checkout_margin_8x"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/paypal_checkout_margin_8x" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

