<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/paypal_checkout_background_scrim_color" />

    <ScrollView
        android:id="@+id/scrollView_address_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.paypal.pyplcheckout.ui.feature.home.customviews.AutoCloseBottomSheetBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout_recommendation_container"
            android:orientation="vertical"
            android:paddingStart="@dimen/paypal_checkout_margin_16x"
            android:paddingEnd="@dimen/paypal_checkout_margin_16x"
            android:paddingBottom="@dimen/paypal_checkout_margin_12x"
            android:paddingTop="@dimen/paypal_checkout_margin_12x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/paypal_checkout_address_confirmation_background"
            android:background="@drawable/paypal_checkout_rounded_dialog">

            <TextView
                android:id="@+id/textView_address_match_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/address_confirmation_header"
                android:textSize="@dimen/paypal_checkout_text_size_24"
                android:textColor="@color/paypal_checkout_black_90"/>

            <TextView
                android:id="@+id/textView_address_match_subheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textView_address_match_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/paypal_checkout_margin_12x"
                android:textSize="@dimen/paypal_checkout_text_size_18"
                android:textColor="@color/paypal_checkout_black_90"
                android:text="@string/address_confirmation_subheader" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView_rec_address_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textView_address_match_subheader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/paypal_checkout_margin_12x"
                app:checkedIconTint="@color/paypal_checkout_add_card_blue"
                app:cardForegroundColor="@null"
                app:rippleColor="@color/paypal_checkout_blue_100"
                android:checkable="true"
                android:elevation="0dp"
                app:strokeWidth="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/paypal_checkout_margin_16x"
                    android:layout_marginBottom="@dimen/paypal_checkout_margin_16x"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/paypal_checkout_padding_8x"
                    android:paddingEnd="@dimen/paypal_checkout_padding_8x"
                    android:clickable="false">

                    <TextView
                        android:id="@+id/textView_rec_address_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/paypal_checkout_black_90"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold"
                        android:text="@string/address_rec_header"
                        android:clickable="false" />

                    <TextView
                        android:id="@+id/textView_rec_address_line_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/paypal_checkout_black_90"
                        android:layout_marginTop="@dimen/paypal_checkout_margin_4x"
                        android:textSize="@dimen/paypal_checkout_text_size_14"
                        tools:text="2211 N. First"
                        android:clickable="false"/>

                    <TextView
                        android:id="@+id/textView_rec_address_line_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/paypal_checkout_black_90"
                        android:layout_marginTop="@dimen/paypal_checkout_margin_4x"
                        android:textSize="@dimen/paypal_checkout_text_size_14"
                        tools:text="Unit #4"
                        android:clickable="false"/>

                    <TextView
                        android:id="@+id/textView_rec_address_line_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/paypal_checkout_black_90"
                        android:layout_marginTop="@dimen/paypal_checkout_margin_4x"
                        android:textSize="@dimen/paypal_checkout_text_size_14"
                        tools:text="San Jose, CA 95131"
                        android:clickable="false"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView_input_address_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cardView_rec_address_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:checkedIconTint="@color/paypal_checkout_add_card_blue"
                app:cardForegroundColor="@null"
                app:rippleColor="@color/paypal_checkout_blue_100"
                android:checkable="true"
                android:elevation="0dp"
                app:strokeWidth="2dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/paypal_checkout_margin_16x"
                    android:layout_marginBottom="@dimen/paypal_checkout_margin_16x"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/paypal_checkout_padding_8x"
                    android:paddingEnd="@dimen/paypal_checkout_padding_8x"
                    android:clickable="false" >

                    <TextView
                        android:id="@+id/textView_input_address_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/paypal_checkout_black_90"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold"
                        android:text="@string/address_input_header"
                        android:clickable="false"/>

                    <TextView
                        android:id="@+id/textView_input_address_line_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/paypal_checkout_black_90"
                        android:layout_marginTop="@dimen/paypal_checkout_margin_4x"
                        android:textSize="@dimen/paypal_checkout_text_size_14"
                        tools:text="2211 N. Firstt"
                        android:clickable="false"/>

                    <TextView
                        android:id="@+id/textView_input_address_line_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/paypal_checkout_black_90"
                        android:layout_marginTop="@dimen/paypal_checkout_margin_4x"
                        android:textSize="@dimen/paypal_checkout_text_size_14"
                        tools:text="Unit #4"
                        android:clickable="false"/>

                    <TextView
                        android:id="@+id/textView_input_address_line_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/paypal_checkout_black_90"
                        android:layout_marginTop="@dimen/paypal_checkout_margin_4x"
                        android:textSize="@dimen/paypal_checkout_text_size_14"
                        tools:text="San Jose, CA 95131"
                        android:clickable="false"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.paypal.pyplcheckout.ui.feature.home.customviews.PayPalActionButton
                android:id="@+id/button_save_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paypal_checkout_margin_24x"
                android:gravity="center"
                android:text="@string/paypal_checkout_new_address_save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardView_input_address_container" />

            <ProgressBar
                android:id="@+id/progressBar_save_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="@dimen/paypal_checkout_padding_2x"
                app:layout_constraintBottom_toBottomOf="@+id/button_save_address"
                app:layout_constraintEnd_toEndOf="@+id/button_save_address"
                app:layout_constraintStart_toStartOf="@+id/button_save_address"
                app:layout_constraintTop_toTopOf="@+id/button_save_address" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>