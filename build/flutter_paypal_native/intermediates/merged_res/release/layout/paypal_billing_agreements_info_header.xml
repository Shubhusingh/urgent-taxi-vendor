<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/title_text"
        style="@style/TextAppearance.PayPal.Checkout.Title1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/paypal_checkout_billing_agreements_info_header_title"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/paypal_checkout_margin_16x"
        android:layout_marginEnd="@dimen/paypal_checkout_margin_16x"
        android:layout_marginTop="@dimen/paypal_checkout_margin_16x"
        android:textColor="@color/paypal_checkout_billing_agreements_tone_1" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/authorization_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/paypal_checkout_primary_blue"
        android:padding="@dimen/paypal_checkout_textview_touch_target_padding"
        android:textSize="@dimen/paypal_checkout_text_size_14"
        android:text="@string/paypal_checkout_billing_agreements_authorization_info"/>


</merge>