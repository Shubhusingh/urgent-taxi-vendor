<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/paypal_checkout_touch_target_min_height"
    android:background="?selectableItemBackground">

    <ImageView
        android:id="@+id/countryCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAlignBottom="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paypal_checkout_ic_check"
        tools:visibility="visible"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/valueTv"
        style="@style/PYPLTextViewBody2Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="@android:integer/config_longAnimTime"
        android:focusedByDefault="true"
        android:drawablePadding="@dimen/paypal_checkout_padding_8x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/paypal_checkout_add_card_country_us"/>

</androidx.constraintlayout.widget.ConstraintLayout>
