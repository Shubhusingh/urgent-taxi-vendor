<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addressBookParentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/paypal_checkout_touch_target_min_width"
    android:minHeight="@dimen/paypal_checkout_touch_target_min_height"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/paypal_checkout_padding_8x"
    android:paddingStart="@dimen/paypal_checkout_padding_8x"
    android:paddingEnd="@dimen/paypal_checkout_padding_8x"
    android:paddingTop="@dimen/paypal_checkout_padding_8x">

    <TextView
        android:id="@+id/addressLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/paypal_checkout_black_90"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addressLine2"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/PYPLEditTextStyle"/>

    <TextView
        android:id="@+id/addressLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paypal_checkout_margin_4x"
        app:layout_constraintTop_toBottomOf="@id/addressLine1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/addressLine1"
        style="@style/PYPLEditTextStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>
